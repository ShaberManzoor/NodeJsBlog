<div class="author">
    <h1 class="author_heading">Hi! I am Shaber</h1>
    <p class="author_body">Web Developer</p>
</div>

<img src="/img/hero-img.jpg" alt="" class="hero-image" width="981" height="528">

<section class="articles">
    <h2 class="articles_heading">Latest Posts</h2>

    <ul class="articles-ul">
        <% data.forEach(post => { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span><%= post.title %></span>
                    <span class="article_list_date"><%= post.createdAt.toDateString() %></span> 
                </a>
            </li>

        <% }) %>
    </ul>


    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; view older posts</a> 
    <% } %>
</section>